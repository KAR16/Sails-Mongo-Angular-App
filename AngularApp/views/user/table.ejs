<div class="container">
	<h2> Registered Users </h2>
	  <table class="table table-striped table-responsive">
            <thead class = "titles">
              <tr>
                <td class ="name"><strong>Name</strong></td>
                <td class="lastname" ><strong>Lastname</strong></td>
                <td class="username"><strong>Username</strong></td>
                <td class="email"><strong>Email</strong></td>
                <td class="actions"><strong>Actions</strong></td>
              </tr>
            </thead>

            <tbody class="display" ng-repeat="post in posts">
              <td class ="name"> {{ post.name }} </td>
                <td class ="lastname"> {{ post.lastname }} </td>
                <td class ="username"> {{ post.username }} </td>
                <td class ="email"> {{ post.email }} </td>

                <td class="edit">
                  <a href="/user/show/{{post.id}} "><input class="btn btn-primary" type="button" value="See Details"></a>
                </td>
                <td class="delete">
                  <a href="/user/delete/{{ post.id}}"><input class="btn btn-danger" type="button" value="Delete"></a>
                </td>
              </tr>
            </tbody>
          </table>
</div>